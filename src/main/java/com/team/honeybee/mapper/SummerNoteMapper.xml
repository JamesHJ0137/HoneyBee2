<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.honeybee.mapper.SummerNoteMapper">
	<!-- 첫 이미지 업로드  -->
	<insert  useGeneratedKeys="true"  id="insertImage" keyColumn="image_id" keyProperty="imageId">
		INSERT INTO BoardImage(image_name, member_id)
		VALUES (#{imageName}, #{memberId})
	</insert>
	<update id="uploadImageUrl">
		UPDATE BoardImage
		SET image_url = #{imageUrl}
		WHERE image_id = #{imageId}
	</update>
	
	<!-- imageUrl관련 image_id와 image_name 가져오기 -->
	<select id="getImageDate" resultType="com.team.honeybee.domain.SummerNoteDto">
		SELECT image_id, image_name
		FROM BoardImage
		WHERE image_url = #{imageUrl}
	</select>
	
	
	<!--이미지 이름 비교  -->
	<select id="compareImage" resultType="int">
		SELECT COUNT(image_url)
		FROM BoardImage
		WHERE image_url = #{imageUrl}
	</select>
	
	<!--비교 후 없는 이름들 지우기  -->
	<delete id="deleteImage">
		DELETE FROM BoardImage
		WHERE image_url = #{imageUrl}
	</delete>
</mapper>